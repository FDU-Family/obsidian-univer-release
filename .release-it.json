{
    "github": {
        "release": true
    },
    "git": {
        "tagName": "v${version}"
    },
    "increment": false,
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "npx auto-changelog -p",
        "after:release": "echo 发布成功"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    }
}