{
    "github": {
        "release": true
    },
    "git": {
        "requireBranch": "master",
        "commitMessage": "chore: release: v${version}"
    },
    "npm": {
        "publish": true
    },
    "hooks": {
        "before:init": ["git pull"],
        "after:bump": "npx auto-changelog -p",
        "after:release": "echo 发布成功"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        },
        "@release-it-plugins/workspaces": {
            "publish": false,
            "workspace": [
                "scr/*"
            ]
        }
    }
}